ALTER TABLE TIPO
ADD PRIMARY KEY (#TIPO);
GO
-- CREANDO LA TABLA DE PRODUCTOS
CREATE TABLE PRODUCTO 
(
	#PRODUCTO INT NOT NULL PRIMARY KEY,
	NOMBRE VARCHAR(128) NOT NULL,
	UNIDAD VARCHAR(40) NOT NULL,
	PRECIO DECIMAL(8,2) NOT NULL, 
	#TIPO INT NOT NULL FOREIGN KEY REFERENCES TIPO
);
GO

-- CREANDO TABLA EMPLEADOS
CREATE TABLE EMPLEADOS 
(
	#EMPLEADO INT NOT NULL PRIMARY KEY,
	NOMBRE VARCHAR(50) NOT NULL,
	TELEFONO VARCHAR(20) NULL,
	CARGO VARCHAR(25) NULL, 
	DIRECCION VARCHAR(100) NULL,
);
GO

--CREANDO LA TABLA DE VENTAS
CREATE TABLE VENTAS
(
	#VENTAS INT NOT NULL PRIMARY KEY,
	FECHA DATETIME NOT NULL,
	NOMBRECLIENTE VARCHAR(60) NULL,
	NIT VARCHAR(12) NULL,
	#EMPLEADO INT FOREIGN KEY REFERENCES EMPLEADOS 

);
GO

-- CREANDO LA TABLA VENTA PRODUCTOS 
CREATE TABLE VENTAPRODUCTO
(
	#VENTAPRODUCTO INT NOT NULL PRIMARY KEY,
	CANTIDAD INT NOT NULL,
	PRECIO DECIMAL(8,2) NOT NULL,
	#PRODUCTO INT FOREIGN KEY REFERENCES PRODUCTO,
	#VENTAS INT FOREIGN KEY REFERENCES VENTAS

);
GO

-- GUARDANDO DATOS A LA TABLA DE TIPOS
--(mejor forma de cargar datos son la 1 o la 2 no usar otras)
--(la ultima es para la carga en masa de datos)
INSERT INTO TIPO (#TIPO, TIPO) VALUES (10, 'CARNES');
INSERT INTO TIPO (TIPO, #TIPO) VALUES ('LACTEOS', 20);
INSERT INTO TIPO VALUES (30, 'EMBUTIDOS');
INSERT INTO TIPO VALUES (40);
INSERT INTO TIPO (#TIPO, TIPO)
VALUES (50, 'BEBIDAS GASEOSAS'),
		(60, 'AGUA'),
		(70, 'JUGOS');

GO


